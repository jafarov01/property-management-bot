# Local Development Environment Configuration
# Copy this to .env and update with your actual credentials

# Database Configuration
DATABASE_URL=postgresql://eivissa_user:eivissa_password@localhost:5432/eivissa_operations

# Telegram Configuration (you'll need to create a bot and get these)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_TARGET_CHAT_ID=your_telegram_chat_id_here

# Slack Configuration (you'll need to create a Slack app)
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_SIGNING_SECRET=your_slack_signing_secret
SLACK_CHECKIN_CHANNEL_ID=your_checkin_channel_id
SLACK_CLEANING_CHANNEL_ID=your_cleaning_channel_id
SLACK_USER_ID_OF_LIST_POSTER=your_authorized_user_id
SLACK_USER_ID_OF_SECOND_POSTER=optional_second_user_id

# AI Configuration (you'll need a Google AI API key)
GEMINI_API_KEY=your_gemini_api_key_here

# Email Configuration (for Gmail monitoring)
IMAP_SERVER=imap.gmail.com
IMAP_USERNAME=your_email@gmail.com
IMAP_PASSWORD=your_app_specific_password

# Application Configuration
WEBHOOK_URL=http://localhost:8000
RUN_SCHEDULER=true
TIMEZONE=Europe/Budapest