# Production Environment Configuration Template
# Copy these variables to your deployment platform's environment settings

# Database Configuration (Required)
DATABASE_URL=postgresql://username:password@hostname:port/database_name

# Telegram Configuration (Required for Telegram functionality)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_from_botfather
TELEGRAM_TARGET_CHAT_ID=your_telegram_group_chat_id

# Slack Configuration (Required for Slack functionality)
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_SIGNING_SECRET=your_slack_app_signing_secret
SLACK_CHECKIN_CHANNEL_ID=your_checkin_channel_id
SLACK_CLEANING_CHANNEL_ID=your_cleaning_channel_id
SLACK_USER_ID_OF_LIST_POSTER=authorized_user_id_1
SLACK_USER_ID_OF_SECOND_POSTER=authorized_user_id_2

# AI Configuration (Required for AI parsing)
GEMINI_API_KEY=your_google_gemini_api_key

# Email Configuration (Required for email monitoring)
IMAP_SERVER=imap.gmail.com
IMAP_USERNAME=your_email@gmail.com
IMAP_PASSWORD=your_app_specific_password

# Application Configuration (Required)
WEBHOOK_URL=https://your-app-name.onrender.com
RUN_SCHEDULER=true
TIMEZONE=Europe/Budapest

# Optional: Logging Level
LOG_LEVEL=INFO